{
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": true
	},
	"files.exclude": {
		"**/node_modules": true,
		"node_modules": true
	},
	"search.exclude": {
		"**/package-lock.json": true,
		"**/.next": true,
		"**/node_modules": true
	},
	"editor.detectIndentation": true,
	"editor.rulers": [80],
	"editor.tabSize": 2,
	"prettier.tabWidth": 2
}
